using namespace std;

void angkamasukan(int bill[]){
cout<<"mengurutkan data : 	"<<bill[1]<<"  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4]<<"  "<<bill[5]<<"  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8];	
}

void angkaproses(int bill[]){
cout<<"mengurutkan data : 	"<<"            "<<bill[5]<<"  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8];	
}

void angkaproses2(int bill[]){
cout<<"mengurutkan data : 	"<<bill[1]<<"  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4];	
}

void banyak4angka(int bill[]){
	int a,b,c,d;
	int aa,bb,cc;
	
	while(a>b || b>c || c>d){
	
	bill[1];bill[2];bill[3];bill[4];

if(bill[1]<bill[2]){
	a=bill[1];
	aa=bill[2];
}else {
	a=bill[2];
	aa=bill[1];
}
	
if(aa<bill[3]){
		
	b=aa;
	bb=bill[3];
}else {
	b=bill[3];
	bb=aa;
}
	
if(bb<bill[4]){
	c=bb;
	d=bill[4];
}else{
	c=bill[4];
	d=bb;
}

bill[1]=a;bill[2]=b;bill[3]=c;bill[4]=d;

}
cout<<"			"<<a<<" "<<b<<" "<<c<<" "<<d<<" <-- mengurutkan";

}

void banyak4angka2(int bill[]){
	int a,b,c,d;
	int aa,bb,cc;
	
	while(a>b || b>c || c>d){
	
	bill[5];bill[6];bill[7];bill[8];

if(bill[5]<bill[6]){
	a=bill[5];
	aa=bill[6];
}else {
	a=bill[6];
	aa=bill[5];
}
	
if(aa<bill[7]){
		
	b=aa;
	bb=bill[7];
}else {
	b=bill[7];
	bb=aa;
}
	
if(bb<bill[8]){
	c=bb;
	d=bill[8];
}else{
	c=bill[8];
	d=bb;
}

bill[5]=a;bill[6]=b;bill[7]=c;bill[8]=d;

}
cout<<"				   "<<a<<" "<<b<<" "<<c<<" "<<d<<" <-- mengurutkan";

}

