void mergelanjut(int bill[]){
	
cout<<"mengurutkan data : 	"<<bill[1]<<"  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4]<<"    "<<bill[5]<<"  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8];
sleep(2);
system("cls");

cout<<"mengurutkan data : 	"<<"["<<bill[1]<<"]  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4]<<"    ["<<bill[5]<<"]  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8]<<endl;
///if pertama
if(bill[1]>bill[5]){
cout<<"		"<<bill[5];
sleep(2);
system("cls");

cout<<"mengurutkan data : 	"<<"["<<bill[1]<<"]  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4]<<"    "<<bill[5]<<"  ["<<bill[6]<<"]  "<<bill[7]<<"  "<<bill[8]<<endl;
	if(bill[1]>bill[6]){
		cout<<"		"<<bill[5]<<" "<<bill[6];
		sleep(2);
		system("cls");
		cout<<"mengurutkan data : 	"<<"["<<bill[1]<<"]  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4]<<"    "<<bill[5]<<"  "<<bill[6]<<"  ["<<bill[7]<<"]  "<<bill[8]<<endl;
		if(bill[1]>bill[7]){
			cout<<"		"<<bill[5]<<" "<<bill[6]<<" "<<bill[7];
			sleep(2);
		system("cls");
		}else{
			cout<<"		"<<bill[5]<<" "<<bill[6]<<" "<<bill[1];
			sleep(2);
		system("cls");
		}	
	}else{
		cout<<"		"<<bill[5]<<" "<<bill[1];
		sleep(2);
		system("cls");
		cout<<"mengurutkan data : 	"<<bill[1]<<"  ["<<bill[2]<<"]  "<<bill[3]<<"  "<<bill[4]<<"    "<<bill[5]<<"  ["<<bill[6]<<"]  "<<bill[7]<<"  "<<bill[8]<<endl;
		if(bill[6]>bill[2]){
			cout<<"		"<<bill[5]<<" "<<bill[1]<<" "<<bill[2];
			sleep(2);
		system("cls");
		}else{
			cout<<"		"<<bill[5]<<" "<<bill[1]<<" "<<bill[7];
			sleep(2);
		system("cls");
		}	
	}


///batas if pertama
}else{
cout<<"		"<<bill[1];
sleep(2);
system("cls");

cout<<"mengurutkan data : 	"<<bill[1]<<"  ["<<bill[2]<<"]  "<<bill[3]<<"  "<<bill[4]<<"    ["<<bill[5]<<"]  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8]<<endl;
}
sleep(2);
system("cls");

cout<<"mengurutkan data : 	"<<bill[1]<<"  ["<<bill[2]<<"]  "<<bill[3]<<"  "<<bill[4]<<"    ["<<bill[5]<<"]  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8]<<endl;
	if(bill[2]>bill[5]){
		cout<<"		"<<bill[1]<<" "<<bill[5];
		sleep(2);
		system("cls");
		cout<<"mengurutkan data : 	"<<bill[1]<<"  ["<<bill[2]<<"]  "<<bill[3]<<"  "<<bill[4]<<"    "<<bill[5]<<"  ["<<bill[6]<<"]  "<<bill[7]<<"  "<<bill[8]<<endl;
		if(bill[2]>bill[6]){
			cout<<"		"<<bill[1]<<" "<<bill[5]<<" "<<bill[6];
			sleep(2);
		system("cls");
		}else{
			cout<<"		"<<bill[1]<<" "<<bill[5]<<" "<<bill[2];
			sleep(2);
		system("cls");
		}	
	}else{
		cout<<"		"<<bill[1]<<" "<<bill[2];
		sleep(2);
		system("cls");
		cout<<"mengurutkan data : 	"<<bill[1]<<"  "<<bill[2]<<"  ["<<bill[3]<<"]  "<<bill[4]<<"    ["<<bill[5]<<"]  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8]<<endl;
		if(bill[3]>bill[5]){
			cout<<"		"<<bill[1]<<" "<<bill[2]<<" "<<bill[5];
			sleep(2);
		system("cls");
		}else{
			cout<<"		"<<bill[1]<<" "<<bill[2]<<" "<<bill[3];
			sleep(2);
		system("cls");
		}	
	}

}

void selectionsort(int bill[]){
	
	for(int i=1;i<=8;i++){
		for(int j=i+1;j<=8;j++){
			if(bill[i]>bill[j]){
				swap(bill[i],bill[j]);
			}
		}
	}
}

int main(){

	int bill[8];	
	cout<<"input 8 bilangan menggunakan spasi: ";
	for(int e=1;e<=8;e++){
	
	cin>>bill[e];
}
cout<<endl;

	cout<<"data sebelum di urutkan : ";
	for(int e=1;e<=8;e++){
	cout<<"  "<<bill[e];
}
sleep(3);
system("cls");
int angka1=bill[1], angka2=bill[2], angka3=bill[3],  angka4=bill[4], angka5=bill[5], angka6=bill[6], angka7=bill[7], angka8=bill[8];
mengurutkan(bill);
system("cls");

mengurutkan2(bill);

mergelanjut(bill);

selectionsort(bill);

cout<<" data setelah di urutkan : 		";
cout<<bill[1]<<"  "<<bill[2]<<"  "<<bill[3]<<"  "<<bill[4]<<"  "<<bill[5]<<"  "<<bill[6]<<"  "<<bill[7]<<"  "<<bill[8];
	
return 0;
}
